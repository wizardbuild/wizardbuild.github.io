---
interface Props {
    icon?: string;
    title: string;
    description: string;
}

const { icon, title, description } = Astro.props;
---

<div
    class="bg-light-background-2 dark:bg-dark-background-2 bg-opacity-50 p-6 rounded-lg shadow border border-transparent hover:border-light-background-3 hover:dark:border-dark-background-3"
>
    <div
        class="w-12 h-12 rounded mb-4 flex items-center justify-center bg-light-background-3 dark:bg-dark-background-3"
    >
        <span class="text-xl">
            {icon}
        </span>
    </div>
    <h3 class="text-lg font-bold text-light-text-2 dark:text-dark-text-2">
        {title}
    </h3>
    <p class="mt-2 text-light-text-3 dark:text-dark-text-3 opacity-70">
        {description}
    </p>
</div>
